{
  "packageManager": "yarn@1.22.22",
  "devDependencies": {
    "@babel/core": "^7.28.3",
    "@babel/eslint-parser": "^7.28.0",
    "@babel/eslint-plugin": "^7.27.1",
    "@babel/node": "^7.28.0",
    "@babel/plugin-transform-typescript": "^7.28.0",
    "@babel/runtime": "^7.28.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.12",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "babel-jest": "^30.1.2",
    "chalk": "^5.6.0",
    "chokidar": "^4.0.3",
    "cross-env": "^10.0.0",
    "danger": "^13.0.4",
    "eslint": "^9.34.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-filenames": "^1.3.2",
    "eslint-plugin-flowtype": "^8.0.3",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-you-dont-need-lodash-underscore": "^6.14.0",
    "fs-extra": "^11.3.1",
    "glob": "^11.0.3",
    "husky": "^9.1.7",
    "ignore": "^7.0.5",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "jest-extended": "^6.0.0",
    "jest-junit": "^16.0.0",
    "jest-serializer-path": "^0.1.15",
    "jest-silent-reporter": "^0.6.0",
    "js-yaml": "^4.1.0",
    "lerna": "^8.2.3",
    "lint-staged": "^16.1.6",
    "markdown-magic": "^3.7.0",
    "node-notifier": "^10.0.1",
    "npm-packlist": "^10.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "unified": "^11.0.5",
    "yargs": "^18.0.0"
  },
  "engines": {
    "yarn": "^1.17.3",
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "eslintIgnore": [
    "interfaces",
    "**/__tests__/fixtures/"
  ],
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --ext .js,.jsx,.ts,.tsx --fix",
    "*.{md,css,scss,yaml,yml}": "prettier --write"
  },
  "private": true,
  "scripts": {
    "bootstrap": "cross-env COMPILER_OPTIONS=\"GATSBY_MAJOR=5\" npm-run-all -s \"lerna-prepare -- --{@}\" --",
    "check-repo-fields": "node scripts/lerna/check-repo-fields.js",
    "check-versions": "node scripts/lerna/check-versions.js",
    "format": "npm run format:code && npm run format:other",
    "format:code": "npm run lint:code -- --fix",
    "format:other": "npm run prettier -- --write",
    "jest:inspect": "node --inspect node_modules/.bin/jest --runInBand",
    "jest:inspect-brk": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "lerna-prepare": "lerna run prepare --ignore gatsby-core-utils",
    "lint": "npm-run-all --continue-on-error -p lint:code lint:other",
    "lint:code": "eslint --ext .js,.jsx,.ts,.tsx --quiet .",
    "lint:other": "npm run prettier -- --check",
    "markdown": "md-magic --path \"starters/**/README.md\"",
    "postmarkdown": "prettier --write \"starters/**/README.md\"",
    "prebootstrap": "yarn && npm run check-versions && cross-env COMPILER_OPTIONS=\"GATSBY_MAJOR=5\" lerna run prepare --scope gatsby-core-utils",
    "prepare": "husky",
    "prettier": "prettier \"**/*.{md,css,scss,yaml,yml}\"",
    "publish": "echo \"Use 'yarn publish-next' or 'yarn publish-release' instead of 'yarn run publish'\"",
    "publish-canary": "node scripts/check-publish-access && lerna publish --canary --yes",
    "publish-next": "node scripts/check-publish-access && node scripts/lerna/clear-package-dir prerelease --verbose && cross-env COMPILER_OPTIONS=\"GATSBY_MAJOR=5\" lerna publish prerelease --pre-dist-tag=next --preid=next --allow-branch=master --message=\"chore(release): Publish next\"",
    "publish-preminor": "node scripts/check-publish-access && node scripts/lerna/clear-package-dir preminor --verbose && lerna publish preminor --pre-dist-tag=next --preid=next --force-publish --allow-branch=master --message=\"chore(release): Publish next pre-minor\"",
    "publish-rc": "node scripts/check-publish-access && node scripts/lerna/clear-package-dir prerelease --verbose && lerna publish prerelease --pre-dist-tag=rc --preid=rc --message=\"chore(release): Publish rc\"",
    "publish-release": "node scripts/check-publish-access && node scripts/lerna/clear-package-dir patch --verbose && lerna publish patch",
    "publish-premajor": "node scripts/lerna/release-next-major.js publish",
    "test": "npm-run-all --npm-path npm -s lint jest test:peril",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --config=integration-tests/jest.config.js",
    "test:peril": "cd peril && yarn test",
    "test:update": "jest --updateSnapshot",
    "test:watch": "jest --watch",
    "typecheck": "node ./scripts/check-ts",
    "version": "node ./scripts/gatsby-changelog-generator/lerna-version-lifecycle.js && prettier --write \"**/CHANGELOG.md\"",
    "watch": "lerna run watch --no-sort --stream --concurrency 999"
  },
  "workspaces": [
    "packages/*"
  ],
  "resolutions": {}
}
